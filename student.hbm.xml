<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="HibernatePractice.StudentClient" table="student">
		<id name="STUD_ID" type="int" column="STUD_ID">
		<generator class="native"></generator>
		</id>
		<property name="STUD_NAME" column="STUD_NAME" type="string">
		</property>
		<property name="STUD_MARKS" column="STUD_MARKS" type="int">
		</property>
		<property name="STUD_JOIN_DATE" column="STUD_JOIN_DATE" type="date">
		</property>
	</class>

</hibernate-mapping>